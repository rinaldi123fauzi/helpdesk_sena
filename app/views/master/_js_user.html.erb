<script>
  $(document).on('change','.activation',function(e){
    var id = $(this).data('id');
    var status = $(this).val();
    $.ajax({
      url: "<%= activationUser_helper_json_index_path %>",
      method: 'POST',
      data : {
        authenticity_token: '<%= form_authenticity_token %>',
        id:id,
        status:status
      },
      success: function(data)
      {
        if (data[0]['status'] == "terubah") {
          window.location.href = "/master/index?pilihan=Data User";
        }
      }
    });
  });
</script>
                <div class="form-group">
                  <label>File <small>Optional</small></label>
                  <div class="input-group">
                    <input type="file" name="file_tiket[]" class="form-control" multiple>
                  </div>
                </div>
              </div>

              <div class="col-md-4">
                <button class="btn btn-sm btn-info" id="simpan">Simpan</button>
              </div>
            </div>
          </form>
        </div>
      </div>

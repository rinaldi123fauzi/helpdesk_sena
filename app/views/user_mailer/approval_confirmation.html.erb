<h3>Informasi Tiket :</h3>
<table border="0">
  <tr>
    <td>Nomor Tiket</td>
    <td witdh="20"> : </td>
    <td><%= @ticket.no_ticket %></td>
  </tr>
  <tr>
    <td>Layanan</td>
    <td> : </td>
    <td><%= @ticket.category.nama_kategori %></td>
  </tr>
  <tr>
    <td>Sub Layanan</td>
    <td> : </td>
    <td><%= @ticket.sub_category.nama_sub_kategori %></td>
  </tr>
  <tr>
    <td>Dibuat Oleh</td>
    <td> : </td>
    <td><%= @ticket.issued_by %></td>
  </tr>
  <tr>
    <td>Divisi</td>
    <td> : </td>
    <td><%= @ticket.work_unit.nama  %></td>
  </tr>
  <tr>
    <td>Area</td>
    <td> : </td>
    <td><%= @ticket.area.nama  %></td>
  </tr>
  <tr>
    <td>Deskripsi</td>
    <td> : </td>
    <td><%= @ticket.description  %></td>
  </tr>

    <td><a href="<%= ENV["WEBSITE"] %>/approval_email/reject?ticket_id=<%= @ticket.id %>&username=<%= @ticket.approval_by %>&token=<%= @token %>" style="color: red;">Reject</a></td>
  </tr>
</table>

